<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>
    Practice
    @* Schad | Practice *@
    </title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link rel="stylesheet" href="~/dist/css/bootstrap/bootstrap.min.css">
  @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">*@

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">

  <!-- Ionicons -->
  <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

  <!-- Theme style -->
  <link rel="stylesheet" href="~/dist/css/adminlte.min.css">

  <!-- Google Font: Source Sans Pro -->
  <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">

  @await RenderSectionAsync("Styles", required: false)

  <style>
    .content{
      padding: 0px 50px 0px 50px !important;
    }
  </style>

</head>
<body class="hold-transition sidebar-mini">
<!-- Site wrapper -->
<div class="wrapper">
  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand bg-white navbar-light border-bottom">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fa fa-bars"></i></a>
      </li>
    </ul>

  </nav>
  <!-- /.navbar -->

  <!-- Main Sidebar Container -->
  <aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
      @* <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ShadPractice.Web</a> *@

    <a aasp-action="Index" asp-controller="Home" class="brand-link">
      <img src="~/dist/img/AdminLTELogo.png"
           alt="Schad Logo"
           class="brand-image img-circle elevation-3"
           style="opacity: .8;">
      <span class="brand-text font-weight-light">
          Schad
        </span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">

      <!-- Sidebar Menu -->
      <nav class="mt-2">
        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
          <!-- Add icons to the links using the .nav-icon class
               with font-awesome or any other icon font library -->
          <li class="nav-item has-treeview">
            <a asp-controller="Customers" asp-action="Index" class="nav-link">
              <i class="nav-icon fa fa-users"></i>
              <p>
                Customers
              </p>
            </a>
          </li>

          <li class="nav-item has-treeview">
            <a asp-controller="Invoice" asp-action="Index" class="nav-link">
              <i class="nav-icon fa fa-file-text"></i>
              <p>
                Invoice
              </p>
            </a>
          </li>
        </ul>
      </nav>
      <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
  </aside>

  <!-- RenderBody -->

    @RenderBody()

  <footer class="main-footer">
    <strong>Copyright &copy; <span class="footer-year"><span></strong>
  </footer>
</div>
<!-- ./wrapper -->

<script>
  (function() {
    currentDate()
  })()

  //this method asign the current year to footer
  function currentDate(){
    const footerYear = document.querySelector(".footer-year")
    footerYear.innerHTML = new Date().getFullYear()
  }
</script>

<!-- jQuery -->
<script src="~/dist/js/plugins/jquery/jquery.min.js"></script>
<script src="~/dist/js/plugins/jquery/jquery.validate.js"></script>

<script src="~/dist/js/mask/jquery.mask.min.js"></script>

<!-- Bootstrap 4 -->
@*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>*@

<script src="~/dist/js/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<!-- datatables -->
<script src="~/dist/js/datatables/jquery.dataTables.js"></script>
<script src="~/dist/js/datatables/dataTables.bootstrap4.js"></script>

<!-- SlimScroll -->
<script src="~/dist/js/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="~/dist/js/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="~/dist/js/adminlte.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="~/dist/js/demo.js"></script>

  @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
